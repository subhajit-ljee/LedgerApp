<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LedgerProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark_1_600</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LedgerProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LedgerProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LedgerProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.LedgerProject.BillTool" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/fine_white_100</item>
    </style>

    <style name="Theme.LedgerProject.BillTool.Common.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark_1_700</item>
    </style>

    <style name="Theme.LedgerProject.BottomNavigationView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark_1_600</item>
        <item name="android:textColor">@color/fine_white_100</item>
    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/fine_white_100</item>
    </style>

</resources>