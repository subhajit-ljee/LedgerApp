<?xml version="1.0" encoding="utf-8" ?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="profile.profilefragments.ProfileFragment"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        tools:openDrawer="start"
        android:id="@+id/drawerlayout">
        <!--  -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profilepagetoolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00008577"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/debit_credit_main_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:text="LedgerApp! INDIA's 1 Ledger based App"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/main_page_heading_text"
            android:textSize="35sp"/>

        <ImageView
            android:id="@+id/debit_credi_main_image"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/debit_credit_image"
            android:layout_marginTop="180dp"/>

        <Button
            android:id="@+id/debit_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/debit_credi_main_image"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Go For Debit" />

        <Button
            android:id="@+id/credit_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/debit_credi_main_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/debit_view"
            android:text="Go For Credit" />

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/profile_menu_nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/profile_menu_header"
            app:menu="@menu/profile_page_menu"
            android:layout_gravity="start" />

    </androidx.drawerlayout.widget.DrawerLayout>

