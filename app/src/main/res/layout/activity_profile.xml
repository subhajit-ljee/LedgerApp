<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="profile.ProfileActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawerlayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profilepagetoolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00008577"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_reg"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Sign Out"
            android:textSize="8sp"
            android:layout_marginStart="330dp"
            />

        <ImageView
            android:id="@+id/debit_background"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:onClick="onDebitView"
            android:scaleType="fitXY"
            android:background="@drawable/debit_icon_background" />

        <TextView
            android:id="@+id/debit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="216dp"
            android:layout_marginStart="30dp"
            android:text="@string/debit_background"
            android:textColor="@color/searchEditColor"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/debit_symbol_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_below="@id/debit_text"
            android:layout_marginTop="40dp"
            android:layout_marginStart="140dp"
            android:src="@drawable/debit_symbol"/>

        <ImageView
            android:id="@+id/credit_background"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:layout_marginTop="200dp"
            android:layout_marginStart="10dp"
            android:onClick="onCreditView"
            android:layout_toEndOf="@id/debit_background"
            android:src="@drawable/debit_icon_background"/>

        <TextView
            android:id="@+id/credit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="216dp"
            android:layout_marginStart="30dp"
            android:text="@string/credit_background"
            android:layout_toEndOf="@id/debit_background"
            android:textColor="@color/searchEditColor"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/credit_symbol_id"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:scaleType="fitXY"
            android:layout_below="@id/debit_text"
            android:layout_marginTop="47dp"
            android:layout_marginStart="130dp"
            android:layout_toEndOf="@id/debit_background"
            android:src="@drawable/credit_symbol"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/profile_menu_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_menu_header"
        app:menu="@menu/profile_page_menu"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>