<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.addledger.ShowLedgerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF">

        <RelativeLayout
            android:id="@+id/heading_ledger_list"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:background="@drawable/home_page_serach_button_background_layout"
            android:layout_marginStart="65dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#05CCBB">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Balance"
                android:layout_marginTop="60dp"
                android:layout_marginStart="52dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"/>

            <TextView
                android:id="@+id/currency_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/currency_sign_indian_rupees"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/ledger_opening_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_toEndOf="@id/currency_sign"
                android:fontFamily="@font/nunito_bold"
                android:text="2000"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="270dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginStart="65dp"
                android:backgroundTint="#05CCBB"
                android:background="@drawable/home_page_serach_button_background_layout_1"
                 />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/showvoucherledgerrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    tools:listitem="@layout/ledger_list_recycler" />

            </ScrollView>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>