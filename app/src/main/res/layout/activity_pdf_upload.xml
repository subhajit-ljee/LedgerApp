<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload_pdf_activity"
    tools:context="profile.upload.PdfUploadActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bill_main_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/pdf_upload_nav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/profile_menu_nav_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        style="@style/Theme.LedgerProject.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="@id/bill_main_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/profile_page_menu"
        app:itemTextColor="@color/fine_white_100"
        app:itemIconTint="@color/fine_white_100"/>

</androidx.constraintlayout.widget.ConstraintLayout>